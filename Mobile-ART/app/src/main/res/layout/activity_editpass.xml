<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kata sandi"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/epass_et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:background="@drawable/backgroundedittext"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kata sandi baru"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/epass_et_newpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/backgroundedittext"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Konfirmasi kata sandi baru"
            android:textColor="@color/colorPrimary"/>
        <EditText
            android:id="@+id/epass_et_knewpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/backgroundedittext"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/epass_btn_batal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/batal"
                android:background="@drawable/buttonshape"
                android:textColor="@color/buttontext"
                android:textAllCaps="false" />
            <Button
                android:id="@+id/epass_btn_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/simpan"
                android:background="@drawable/buttonshape"
                android:textColor="@color/buttontext"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>