<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kepada :"
            android:textColor="@android:color/black"
            android:textSize="18dp" />


        <EditText
            android:id="@+id/bp_et_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:ems="10"
            android:enabled="false"
            android:focusable="false"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:background="@drawable/backgroundlightgray"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject : "
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/bp_et_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:enabled="false"
            android:focusable="false"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:background="@drawable/backgroundlightgray"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView54"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan :"
            android:textColor="@android:color/black"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/bp_et_pesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:ems="10"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:enabled="false"
            android:focusable="false"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:background="@drawable/backgroundlightgray"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bp_btn_hps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_hps" />

            <!--<Button-->
                <!--android:id="@+id/bp_btn_balas"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:text="@string/btn_bls" />-->

            <Button
                android:id="@+id/bp_btn_kembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_kmbl" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>