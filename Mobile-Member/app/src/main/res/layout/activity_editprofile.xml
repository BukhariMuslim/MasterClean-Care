<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/eprof_iv_foto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="false"
                app:srcCompat="@drawable/default_profile" />
        </RelativeLayout>

        <EditText
            android:id="@+id/eprof_et_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/namalengkap"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:paddingEnd="5dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="center_vertical"
                android:text="@string/alamat"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_column="0"
                android:layout_row="1"
                android:gravity="center_vertical"
                android:text="@string/notelp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_column="0"
                android:layout_row="2"
                android:gravity="center_vertical"
                android:text="No. Telp Darurat"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/eprof_et_alamat"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="0"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/eprof_et_notelp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="1"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/eprof_et_notelp2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_column="1"
                android:layout_row="2"
                android:ems="10"
                android:inputType="textPersonName" />
        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/eprof_btn_simpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/simpan"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14dp"
            android:background="@drawable/buttonshape"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/eprof_btn_batal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/batal"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14dp"
            android:background="@drawable/buttonshape"
            />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>