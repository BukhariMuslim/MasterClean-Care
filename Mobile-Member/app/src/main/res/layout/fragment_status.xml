<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.TA.MVP.appmobilemember.View.Fragment.FragmentStatus">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout_status"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorSecondary"
        app:tabTextColor="@color/colorLightGrey"
        app:tabSelectedTextColor="@color/colorWhite"
        app:tabIndicatorColor="@color/colorBiruGelap"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tablayout_status">
        <android.support.v4.view.ViewPager
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/viewpager_status" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/btn_topup"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Top\nUp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:elevation="16dp"
                android:textColor="#ffffff"/>
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
