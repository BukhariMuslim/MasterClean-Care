<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/card_wallettransaction">
    <LinearLayout
        android:id="@+id/card_wallettransaction_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:textSize="14dp"
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#e3f2fd">
        <TextView
            android:id="@+id/card_wallettransaction_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ "
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/card_wallettransaction_nominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/card_wallettransaction_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>

</android.support.v7.widget.CardView>